{
  "name": "@gravityai-dev/gravity-client",
  "version": "0.2.95",
  "description": "Clean, organized client library for Gravity AI with real-time streaming and 3-tier JSON architecture",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch --force",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gravityai-dev/gravity-client.git"
  },
  "author": "Gravity AI <dev@gravityai.com>",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@apollo/client": "^3.8.0",
    "@graphql-yoga/apollo-link": "^3.0.1",
    "graphql": "^16.8.0",
    "react": "^18.2.0",
    "zustand": "^4.4.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^5.0.0",
    "@graphql-codegen/typescript": "^4.0.0",
    "@graphql-codegen/typescript-operations": "^4.0.0",
    "@types/react": "^18.2.0",
    "tsup": "^8.0.0",
    "typescript": "^5.2.0"
  },
  "peerDependencies": {
    "react": ">=16.8.0"
  },
  "keywords": [
    "gravity-ai",
    "ai",
    "chat",
    "streaming",
    "graphql",
    "react",
    "zustand"
  ]
}